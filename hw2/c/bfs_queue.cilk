BfsQueue :: BfsQueue(int procs, int n ) {

  nseg = n;
  p = procs;
  flags = vector<int>(n + 1);

  for (int i = 0; i < p; i++) {
	queues.push_back(queue<int>());
  }


  for (int i = 0; i < n + 1; i++) {
	flags[i] = -1;
  }

}

void BfsQueue::enque(int i, int value) {
  if (i < p) {

	// Test - Set - Test in the flags vector 
	// before adding it in any of the queue
	// avoids expanding of node multiple 
	// times
	
	if (flags[value] == -1) {
	  
#ifdef DEBUG
	  cout << i<<" Test"<<endl;
#endif
	  flags[value] = i;
	  
	  if (flags[value] == i) {
#ifdef DEBUG
		cout << i<<" Test 2"<<endl;
#endif

		cout<<i<<endl;
		queues[i].push(value);
	  }
	}
		
  }
}

void BfsQueue::set_segment_size() {
  int size = getSize();
  int temp = nseg / size;
  seg = temp == 0 ? size : temp;
}

vector<int> *  BfsQueue::nextSegment() {

  int  size =getSize();
  m.lock();
  if (size > 0) {
	for (int i = 0; i <p; i++) {
	  if (!queues[i].empty()) {
   
		int k = min((int)queues[i].size(), seg);
		for (int j = 0; j <= k; j++) {
		  vector<int> * S = new vector<int>();
		  S->push_back(queues[i].front());
		  queues[i].pop();
		  // TODO remember to free S
		  m.unlock();
		  return S;
		}
		

	  }
	}
  }

  m.unlock();
  return NULL;

}


int BfsQueue::getSize() {
	int n = 0;

	for (int i = 0; i < p; i++) {
		n += 	queues[i].size();
	}

	return n;
}

